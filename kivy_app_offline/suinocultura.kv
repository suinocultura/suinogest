                font_size: dp(20)
                size_hint_x: None
                width: dp(40)
                color: get_color_from_hex(COR_TEXTO_PRIMARIO)
        
        # Container principal (menu lateral + conte√∫do)
        BoxLayout:
            orientation: 'horizontal'
            
