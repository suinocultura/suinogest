        orientation: 'vertical'
        
        # Barra superior
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)
            padding: dp(10)
            spacing: dp(10)
            canvas.before:
                Color:
                    rgba: get_color_from_hex(COR_PRIMARIA)
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            # Bot√£o de menu (hamburguer)
            Button:
                text: '‚â°'
                font_size: dp(24)
                size_hint_x: None
                width: dp(50)
                background_normal: ''
                background_color: get_color_from_hex(COR_PRIMARIA)
