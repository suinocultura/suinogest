                            BoxLayout:
                                orientation: 'vertical'
                                padding: dp(15)
                                canvas.before:
                                    Color:
                                        rgba: get_color_from_hex(COR_SUPERFICIE)
                                    RoundedRectangle:
                                        pos: self.pos
                                        size: self.size
                                        radius: [dp(10)]
                                    # Borda colorida superior
                                    Color:
                                        rgba: get_color_from_hex("#FF6D00")  # Laranja
                                    Line:
                                        points: [self.x, self.y + self.height - dp(2), self.x + self.width, self.y + self.height - dp(2)]
                                        width: dp(4)
                                
                                Label:
                                    text: 'Animais em Cio'
                                    color: get_color_from_hex(COR_TEXTO_SECUNDARIO)
                                    font_size: dp(16)
                                    size_hint_y: None
                                    height: dp(30)
                                
                                Label:
                                    id: animals_in_heat
                                    text: '0'
                                    font_size: dp(30)
                                    color: get_color_from_hex(COR_TEXTO_PRIMARIO)
                                    bold: True
                        
                        # √öltimos registros
                        SubtitleLabel:
                            text: '√öltimos Eventos'
                        
                        # Lista de eventos recentes
                        ScrollView:
                            BoxLayout:
                                id: events_container
                                orientation: 'vertical'
                                size_hint_y: None
                                height: self.minimum_height
                                spacing: dp(10)
                                # Este container ser√° preenchido dinamicamente com eventos
                
                # Tela de cadastro de animais
                Screen:
                    name: 'animals'
                    BoxLayout:
                        orientation: 'vertical'
                        padding: dp(15)
                        spacing: dp(15)
                        canvas.before:
                            Color:
                                rgba: get_color_from_hex(COR_FUNDO)
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        
                        # T√≠tulo da p√°gina
                        TitleLabel:
                            text: 'Gerenciamento de Animais'
                        
                        # Barra de a√ß√µes
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint_y: None
                            height: dp(56)
                            spacing: dp(10)
                            
                            CustomButton:
                                text: '+ Novo Animal'
                                size_hint_x: 0.5
                                on_release: app.open_animal_form()
                            
                            CustomTextInput:
                                id: animal_search
                                hint_text: 'Buscar...'
                                size_hint_x: 0.5
                                on_text: app.filter_animals(self.text)
                        
                        # Lista de animais
                        ScrollView:
                            BoxLayout:
                                id: animals_container
                                orientation: 'vertical'
                                size_hint_y: None
                                height: self.minimum_height
                                spacing: dp(10)
                                # Este container ser√° preenchido dinamicamente com cards de animais

