                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        padding: dp(5)
                        spacing: dp(5)
                        
                        MenuButton:
                            text: 'üè†  In√≠cio'
                            on_release: app.change_screen('home')
                        
                        MenuButton:
                            text: 'üê∑  Animais'
                            on_release: app.change_screen('animals')
                        
                        MenuButton:
                            text: 'üìä  Reprodu√ß√£o'
                            on_release: app.change_screen('reproduction')
                        
                        MenuButton:
                            text: '‚öñÔ∏è  Peso e Idade'
                            on_release: app.change_screen('weight')
                        
                        MenuButton:
                            text: 'üè•  Sa√∫de'
                            on_release: app.change_screen('health')
                        
                        MenuButton:
                            text: 'üîÑ  Sincronizar'
                            on_release: app.open_sync_options()
                        
                        MenuButton:
                            text: '‚öôÔ∏è  Configura√ß√µes'
                            on_release: app.change_screen('settings')
                        
                        MenuButton:
                            text: 'üö™  Sair'
                            on_release: app.logout()
            
            # √Årea de conte√∫do principal
            ScreenManager:
                id: screen_manager
                
                # Tela inicial
                Screen:
                    name: 'home'
                    BoxLayout:
                        orientation: 'vertical'
                        padding: dp(15)
                        spacing: dp(15)
                        canvas.before:
                            Color:
                                rgba: get_color_from_hex(COR_FUNDO)
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        
                        # T√≠tulo da p√°gina
                        TitleLabel:
                            text: 'Painel de Controle'
                        
                        # Status do rebanho e estat√≠sticas gerais
                        GridLayout:
                            cols: 2
                            spacing: dp(10)
                            size_hint_y: None
                            height: dp(200)
                            
                            # Card 1 - Total de animais
                            BoxLayout:
                                orientation: 'vertical'
                                padding: dp(15)
                                canvas.before:
                                    Color:
                                        rgba: get_color_from_hex(COR_SUPERFICIE)
                                    RoundedRectangle:
                                        pos: self.pos
                                        size: self.size
                                        radius: [dp(10)]
                                    # Borda colorida superior
                                    Color:
                                        rgba: get_color_from_hex("#6200EA")  # Roxo
                                    Line:
                                        points: [self.x, self.y + self.height - dp(2), self.x + self.width, self.y + self.height - dp(2)]
                                        width: dp(4)
                                
                                Label:
                                    text: 'Total de Animais'
                                    color: get_color_from_hex(COR_TEXTO_SECUNDARIO)
